{{>header}}

{{>admin/adminNavbar}}



<link href="https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,600,600i,700,700i,800,800i"
      rel="stylesheet">
<link href="/css/create.css" rel="stylesheet" media="all">


<div class="page-wrapper mt-5 bg-gra-03 p-t-45 p-b-50 pt-5 mt-0">
    <div class="wrapper wrapper--w790">
        <div class="card card-5">
            <div class="card-heading">
                <h2 class="title">Регистрация пользователя</h2>
            </div>
            <div class="card-body">
                <form method="POST" id="form">

                    <div class="row">
                        <div class="text-center">
                            <i class='bx bx-lg bxs-user nav_icon'></i>
                        </div>
                        <div class="col-sm-12 col-md-6">
                            <div class="name fw-bold">Юзернейм пользователя</div>
                            <div class="value">
                                <div class="input-group">
                                    <input id="username" class="input--style-5" required>
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-12 col-md-6">
                            <div class="name fw-bold">Роль</div>
                            <div class="value">
                                <select name="" id="role" class="form-select">
                                    <option value="REPORT">Отчетный</option>
                                    <option value="DRIVER">Водитель</option>
                                    <option value="MANAGER">Менеджер</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-sm-12 col-md-6">
                            <div class="name fw-bold">Пароль</div>
                            <div class="value">
                                <div class="input-group">
                                    <input id="password" class="input--style-5" type="password" required>
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-12 col-md-6">
                            <div class="name fw-bold">Подтверждение пароля</div>
                            <div class="value">
                                <div class="input-group">
                                    <input id="password-conf" class="input--style-5" type="password" required>
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-12 col-md-6">
                            <div class="name fw-bold">ФИО</div>
                            <div class="value">
                                <div class="input-group">
                                    <input id="fullname" class="input--style-5" type="text" required>
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-12 col-md-6">
                            <div class="name fw-bold">Дата рождения</div>
                            <div class="value">
                                <div class="input-group">
                                    <input id="birthday" class="input--style-5 p-0 ps-3" type="date" required>
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-12 col-md-6">
                            <div class="name fw-bold">Серия пасспорта</div>
                            <div class="value">
                                <div class="input-group">
                                    <input id="passport-s" class="input--style-5" type="text" required>
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-12 col-md-6">
                            <div class="name fw-bold">Номер пасспорта</div>
                            <div class="value">
                                <div class="input-group">
                                    <input id="passport-n" class="input--style-5 ps-3" type="number" required>
                                </div>
                            </div>
                        </div>

                        <div class="col-sm-12 col-md-6">
                            <div class="name fw-bold">Адрес</div>
                            <div class="value">
                                <div class="input-group">
                                    <input id="address" class="input--style-5" type="text" required>
                                </div>
                            </div>
                        </div>
                    </div>

                    <hr class="m-4">

                    <div>
                        <button class="btn1 btn--radius-2 btn-success" id="sub-btn"
                                type="submit">Создать</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

